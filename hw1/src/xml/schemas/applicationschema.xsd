<?xml version="1.0" encoding="UTF-8" ?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
			targetNamespace="http://www.persontranscript.com"
			xmlns="http://www.persontranscript.com"
			elementFormDefault="qualified">
			
	<xsd:complexType name="application">
	    <xsd:sequence>
			<xsd:element name="firstname">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="[a-öA-Ö]*"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="lastname">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="[a-öA-Ö]*"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="ssn">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="[0-9]{10}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
		
		
		    <xsd:element name="program" type="schoolprogram" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element name="workhistory" type="workhistorytype" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
    </xsd:complexType>
	
    <xsd:complexType name="schoolprogram">
        <xsd:sequence>
            <xsd:element name="programName" type="xsd:string"/>
            <xsd:element name="universityName" type="xsd:string"/>
            <xsd:element name="course" type="courseTranscript" minOccurs="0" maxOccurs="unbounded"/>
            <xsd:element name="startDate" type="xsd:date"/>
            <xsd:element name="finishDate" type="xsd:date"/>
        </xsd:sequence>
    </xsd:complexType>
	
	<xsd:complexType name="courseTranscript">
        <xsd:sequence>
            <xsd:element name="courseName" type="xsd:string"/>
            <xsd:element name="courseNumber" >
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:pattern value="[A-Z]{2}[0-9]{4}"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="degree" type="xsd:decimal">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:decimal">
                        <xsd:pattern value="[0-5]{1}"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="startDate" type="xsd:date"/>
            <xsd:element name="finishedDate" type="xsd:date"/>
        </xsd:sequence>
    </xsd:complexType>
	
	<xsd:complexType name="schoolprogram">
        <xsd:sequence>
            <xsd:element name="companyName" type="xsd:string"/>
            <xsd:element name="orgNumber" type="xsd:integer"/>
            <xsd:element name="employmentRole" type="xsd:string"/>
            <xsd:element name="startDate" type="xsd:date"/>
            <xsd:element name="endDate" type="xsd:date"/>
        </xsd:sequence>
    </xsd:complexType>
</xsd:schema>